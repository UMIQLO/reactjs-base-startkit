{
  "extends": "airbnb",
  "rules": {
    "semi": [
      "error",
      "never"
    ],
    "arrow-body-style": [
      "error",
      "always"
    ],
    "no-console": 0,
    "indent": [
      "error",
      2
    ],
    "no-undef": "off",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ]
  }
}
